<Window x:Class="SB_Homework11.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SB_Homework11"
        mc:Ignorable="d"
        Title="AddClientWindow" Height="220" Width="400">
    <StackPanel Margin="5,10,5,10" >
        <DockPanel>
            <Label Content="Фамилия" Width="75"/>
            <TextBox x:Name="lName"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Имя" Width="75"/>
            <TextBox x:Name="fName"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Отчество" Width="75"/>
            <TextBox x:Name="mName"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Телефон" Width="75"/>
            <TextBox x:Name="phoneNumber"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Серия" Width="75"/>
            <TextBox x:Name="pasportSerial" Width="75"/>
            <Label Content="Номер" Width="75"/>
            <TextBox x:Name="pasportNumber" Width="100"/>
            <Label Content="паспорта"/>
        </DockPanel>
        <Button Content="Добавить" Margin="10,15,10,10" Width="150" Height="30"></Button>
    </StackPanel>
</Window>
